@page "/help"
@inject IJSRuntime JS

<PageTitle>Help Center - Edutech</PageTitle>

<header class="bg-white shadow-sm">
    <div class="container mx-auto px-4 py-6">
        <div class="text-center">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">Help Center</h1>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">Find answers to common questions and learn how to make the most of our platform</p>

            <!-- Search Bar -->
            <div class="relative max-w-2xl mx-auto mt-8">
                <input type="text" placeholder="Search help articles..."
                       class="w-full pl-12 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                <i data-feather="search" class="absolute left-4 top-3.5 text-gray-400"></i>
            </div>
        </div>
    </div>
</header>

<main class="container mx-auto px-4 py-12">
    <!-- Help Categories -->
    <section class="mb-16" data-aos="fade-up">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">How can we help?</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Category 1 -->
            <div class="help-category-card bg-white rounded-lg shadow-sm p-6 text-center">
                <div class="w-16 h-16 bg-indigo-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i data-feather="book-open" class="text-indigo-600"></i>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Getting Started</h3>
                <p class="text-gray-600">Begin your learning journey with our platform</p>
            </div>

            <!-- Category 2 -->
            <div class="help-category-card bg-white rounded-lg shadow-sm p-6 text-center">
                <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i data-feather="users" class="text-green-600"></i>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Account &amp; Profile</h3>
                <p class="text-gray-600">Manage your account settings and profile</p>
            </div>

            <!-- Category 3 -->
            <div class="help-category-card bg-white rounded-lg shadow-sm p-6 text-center">
                <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i data-feather="dollar-sign" class="text-blue-600"></i>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Billing &amp; Payments</h3>
                <p class="text-gray-600">Questions about subscriptions and payments</p>
            </div>

            <!-- Category 4 -->
            <div class="help-category-card bg-white rounded-lg shadow-sm p-6 text-center">
                <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i data-feather="shield" class="text-purple-600"></i>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">Privacy &amp; Safety</h3>
                <p class="text-gray-600">Learn about our privacy policies and safety measures</p>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="mb-16" data-aos="fade-up">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">Frequently Asked Questions</h2>
        <div class="max-w-4xl mx-auto space-y-4">
            <!-- FAQ 1 -->
            <details class="faq-item bg-white rounded-lg shadow-sm group">
                <summary class="flex items-center justify-between p-6 cursor-pointer">
                    <h3 class="text-lg font-semibold text-gray-900">How do I reset my password?</h3>
                    <i data-feather="chevron-down" class="text-gray-400 group-open:rotate-180 transform transition-transform"></i>
                </summary>
                <div class="px-6 pb-6 pt-2">
                    <p class="text-gray-600">To reset your password, go to the login page and click on "Forgot Password". Enter your email address and we'll send you a link to reset your password. The link will expire after 24 hours for security reasons.</p>
                </div>
            </details>

            <!-- FAQ 2 -->
            <details class="faq-item bg-white rounded-lg shadow-sm group">
                <summary class="flex items-center justify-between p-6 cursor-pointer">
                    <h3 class="text-lg font-semibold text-gray-900">Can I download courses for offline viewing?</h3>
                    <i data-feather="chevron-down" class="text-gray-400 group-open:rotate-180 transform transition-transform"></i>
                </summary>
                <div class="px-6 pb-6 pt-2">
                    <p class="text-gray-600">Yes, with our premium subscription you can download courses for offline viewing. Simply click the download icon next to any lesson. Downloads are available for 30 days before they need to be refreshed.</p>
                </div>
            </details>

            <!-- FAQ 3 -->
            <details class="faq-item bg-white rounded-lg shadow-sm group">
                <summary class="flex items-center justify-between p-6 cursor-pointer">
                    <h3 class="text-lg font-semibold text-gray-900">How do I cancel my subscription?</h3>
                    <i data-feather="chevron-down" class="text-gray-400 group-open:rotate-180 transform transition-transform"></i>
                </summary>
                <div class="px-6 pb-6 pt-2">
                    <p class="text-gray-600">You can cancel your subscription at any time from your account settings. Go to "Billing" and click "Cancel Subscription". Your access will continue until the end of your current billing period.</p>
                </div>
            </details>

            <!-- FAQ 4 -->
            <details class="faq-item bg-white rounded-lg shadow-sm group">
                <summary class="flex items-center justify-between p-6 cursor-pointer">
                    <h3 class="text-lg font-semibold text-gray-900">Are there any free courses available?</h3>
                    <i data-feather="chevron-down" class="text-gray-400 group-open:rotate-180 transform transition-transform"></i>
                </summary>
                <div class="px-6 pb-6 pt-2">
                    <p class="text-gray-600">Yes, we offer a selection of free courses to help you get started. These are marked with a "Free" badge on the course listing page. You can access these without any subscription.</p>
                </div>
            </details>

            <!-- FAQ 5 -->
            <details class="faq-item bg-white rounded-lg shadow-sm group">
                <summary class="flex items-center justify-between p-6 cursor-pointer">
                    <h3 class="text-lg font-semibold text-gray-900">How do I report inappropriate content?</h3>
                    <i data-feather="chevron-down" class="text-gray-400 group-open:rotate-180 transform transition-transform"></i>
                </summary>
                <div class="px-6 pb-6 pt-2">
                    <p class="text-gray-600">If you encounter content that violates our community guidelines, click the "Report" button located below the content. Our moderation team will review the report within 24 hours and take appropriate action.</p>
                </div>
            </details>
        </div>
    </section>

    <!-- Privacy Summary -->
    <section class="mb-16" data-aos="fade-up">
        <div class="bg-white rounded-lg shadow-sm p-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-6">Privacy Summary</h2>
            <div class="prose prose-indigo max-w-none">
                <p class="text-gray-600">We are committed to protecting your privacy and personal information. Here's a summary of our privacy practices:</p>
                <ul class="text-gray-600 mt-4 space-y-2">
                    <li>• We collect only necessary information to provide and improve our services</li>
                    <li>• Your data is encrypted in transit and at rest</li>
                    <li>• We never sell your personal information to third parties</li>
                    <li>• You can export or delete your data at any time from your account settings</li>
                    <li>• We comply with global privacy regulations including GDPR and CCPA</li>
                </ul>
                <p class="text-gray-600 mt-4">For our full privacy policy, please <a href="#" class="text-indigo-600 hover:text-indigo-700">click here</a>.</p>
            </div>
        </div>
    </section>

    <!-- Reporting Instructions -->
    <section data-aos="fade-up">
        <div class="bg-white rounded-lg shadow-sm p-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-6">Reporting Issues</h2>
            <div class="prose prose-indigo max-w-none">
                <p class="text-gray-600">If you need to report an issue or need assistance, here's how to reach us:</p>

                <h3 class="text-xl font-semibold text-gray-900 mt-6">Technical Issues</h3>
                <p class="text-gray-600">For technical problems or bugs:</p>
                <ul class="text-gray-600 mt-2 space-y-2">
                    <li>• Include a detailed description of the issue</li>
                    <li>• Specify your device and browser information</li>
                    <li>• Add screenshots or screen recordings if possible</li>
                    <li>• Email: <a href="mailto:support@edutech.com" class="text-indigo-600 hover:text-indigo-700">support@edutech.com</a></li>
                </ul>

                <h3 class="text-xl font-semibold text-gray-900 mt-6">Content Reporting</h3>
                <p class="text-gray-600">To report inappropriate content or behavior:</p>
                <ul class="text-gray-600 mt-2 space-y-2">
                    <li>• Use the "Report" button on the content itself</li>
                    <li>• Include the specific reason for your report</li>
                    <li>• Provide any relevant context or evidence</li>
                </ul>

                <h3 class="text-xl font-semibold text-gray-900 mt-6">Emergency Contact</h3>
                <p class="text-gray-600">For urgent safety concerns:</p>
                <ul class="text-gray-600 mt-2 space-y-2">
                    <li>• Email: <a href="mailto:emergency@edutech.com" class="text-indigo-600 hover:text-indigo-700">emergency@edutech.com</a></li>
                    <li>• We respond to emergency reports within 1 hour</li>
                </ul>
            </div>
        </div>
    </section>
</main>

<!-- Footer CTA -->
<div class="bg-indigo-600 mt-16">
    <div class="container mx-auto px-4 py-12">
        <div class="text-center" data-aos="fade-up">
            <h2 class="text-3xl font-bold text-white mb-4">Still need help?</h2>
            <p class="text-indigo-100 text-xl mb-8">Our support team is here to assist you</p>
            <div class="flex flex-col sm:flex-row justify-center space-y-4 sm:space-y-0 sm:space-x-4">
                <a href="#" class="bg-white text-indigo-600 px-6 py-3 rounded-lg font-medium hover:bg-indigo-50 transition-colors">
                    Contact Support
                </a>
                <a href="#" class="border-2 border-white text-white px-6 py-3 rounded-lg font-medium hover:bg-white hover:text-indigo-600 transition-colors">
                    Community Forum
                </a>
            </div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("ui.initFeather");
            await JS.InvokeVoidAsync("ui.initAOS", new { duration = 600, once = true });
            await JS.InvokeVoidAsync("ui.wireHelpAccordions");
        }
    }
}
